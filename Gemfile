source "https://rubygems.org"

# Specify the Jekyll version that GitHub Pages uses.
# Your logs indicate jekyll v3.10.0 is being used by GitHub Pages 232.
gem "jekyll", "~> 3.10.0"

# Official Jekyll plugins supported by GitHub Pages
gem "jekyll-feed"       # Generates an Atom (RSS) feed for your blog posts.
gem "jekyll-sitemap"    # Generates a sitemap.xml for search engines.
gem "jekyll-seo-tag"    # Automates crucial SEO meta tags, Open Graph, Twitter Cards, etc.
gem "jekyll-paginate"   # For blog post pagination if you have many posts.

# This gem might be required by Jekyll 3.x/4.x on some systems/environments.
# It's good practice to include it for compatibility.
group :jekyll_plugins do
  gem "webrick", "~> 1.8"
end
